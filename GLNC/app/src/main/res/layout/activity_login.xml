<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_background"
    tools:context=".LoginActivity">

    <!-- Header Section (Light Purple) -->
    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/light_purple"
        android:orientation="horizontal"
        android:padding="16dp"
        android:minHeight="56dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/timeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="17:10"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center_vertical" />
    </LinearLayout>

    <!-- Main Content Area -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/headerLayout"
        app:layout_constraintBottom_toTopOf="@id/footerText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Instruction Text -->
        <TextView
            android:id="@+id/instructionText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Please enter your access code"
            android:textColor="@color/light_gray_text"
            android:textSize="16sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="32dp" />

        <!-- Access Code Display (Asterisks) -->
        <TextView
            android:id="@+id/accessCodeDisplay"
            android:layout_width="140dp"
            android:layout_height="48dp"
            android:text=""
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:background="@drawable/access_code_background"
            app:layout_constraintTop_toBottomOf="@id/instructionText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="24dp" />

        <!-- Keypad Container -->
        <androidx.cardview.widget.CardView
            android:id="@+id/keypadCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="1dp"
            app:cardBackgroundColor="@color/keypad_white"
            app:layout_constraintTop_toBottomOf="@id/accessCodeDisplay"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="32dp">

            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:columnCount="3"
                android:rowCount="4"
                android:alignmentMode="alignMargins"
                android:useDefaultMargins="false">

                <!-- Row 1 -->
                <Button
                    android:id="@+id/btn1"
                    style="@style/KeypadButton"
                    android:text="1"
                    android:layout_columnWeight="1" />

                <Button
                    android:id="@+id/btn2"
                    style="@style/KeypadButton"
                    android:text="2"
                    android:layout_columnWeight="1" />

                <Button
                    android:id="@+id/btn3"
                    style="@style/KeypadButton"
                    android:text="3"
                    android:layout_columnWeight="1" />

                <!-- Row 2 -->
                <Button
                    android:id="@+id/btn4"
                    style="@style/KeypadButton"
                    android:text="4"
                    android:layout_columnWeight="1" />

                <Button
                    android:id="@+id/btn5"
                    style="@style/KeypadButton"
                    android:text="5"
                    android:layout_columnWeight="1" />

                <Button
                    android:id="@+id/btn6"
                    style="@style/KeypadButton"
                    android:text="6"
                    android:layout_columnWeight="1" />

                <!-- Row 3 -->
                <Button
                    android:id="@+id/btn7"
                    style="@style/KeypadButton"
                    android:text="7"
                    android:layout_columnWeight="1" />

                <Button
                    android:id="@+id/btn8"
                    style="@style/KeypadButton"
                    android:text="8"
                    android:layout_columnWeight="1" />

                <Button
                    android:id="@+id/btn9"
                    style="@style/KeypadButton"
                    android:text="9"
                    android:layout_columnWeight="1" />

                <!-- Row 4 -->
                <Button
                    android:id="@+id/btnClear"
                    style="@style/KeypadButton"
                    android:text="C"
                    android:layout_columnWeight="1" />

                <Button
                    android:id="@+id/btn0"
                    style="@style/KeypadButton"
                    android:text="0"
                    android:layout_columnWeight="1" />

                <!-- Empty space for 3rd column in row 4 -->
                <Space
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_columnWeight="1" />

            </GridLayout>
        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Footer Text -->
    <TextView
        android:id="@+id/footerText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="tts GLNC 1.0.5"
        android:textColor="@color/light_gray_text"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>