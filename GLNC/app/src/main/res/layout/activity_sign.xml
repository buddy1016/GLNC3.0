<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp">

        <!-- Instruction Text -->
        <TextView
            android:id="@+id/instruction_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Signer puis cliquer sur l'un des avis pour valider la livraison."
            android:textSize="16sp"
            android:textColor="#2196F3"
            android:textAlignment="center"
            android:padding="10dp"
            android:layout_marginBottom="20dp"
            tools:text="Signer puis cliquer sur l'un des avis pour valider la livraison." />

        <!-- Camera Section -->
        <Button
            android:id="@+id/camera_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ“· Prenez une photo de la facture"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:background="#4CAF50"
            android:padding="15dp"
            android:layout_marginBottom="10dp"
            android:gravity="center" />

        <ImageView
            android:id="@+id/photo_preview"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:minHeight="150dp"
            android:maxHeight="300dp"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"
            android:background="#FFFFFF"
            android:visibility="gone"
            android:layout_marginBottom="16dp"
            tools:visibility="visible" />

        <!-- Signature Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Signature:"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_marginBottom="8dp" />

        <FrameLayout
            android:id="@+id/signature_container"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:minHeight="150dp"
            android:background="@drawable/signature_area_background"
            android:layout_marginBottom="16dp">

            <Button
                android:id="@+id/clear_signature_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Claire"
                android:textSize="12sp"
                android:textColor="@android:color/white"
                android:background="#F44336"
                android:padding="8dp"
                android:layout_gravity="top|end"
                android:layout_margin="10dp" />
        </FrameLayout>

        <!-- Comment Input -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Commentaire:"
            android:textSize="14sp"
            android:textColor="#333333"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/comment_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Saisissez votre commentaire"
            android:textSize="16sp"
            android:background="@drawable/input_field_selector"
            android:padding="12dp"
            android:paddingTop="12dp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:paddingBottom="8dp"
            android:minHeight="48dp"
            android:layout_marginBottom="15dp"
            android:textColorHint="#999999"
            tools:hint="Saisissez votre commentaire" />

        <!-- Weight Input -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Poids:"
            android:textSize="14sp"
            android:textColor="#333333"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/weight_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Entrez le poids"
            android:textSize="16sp"
            android:inputType="numberDecimal"
            android:background="@drawable/input_field_selector"
            android:padding="12dp"
            android:paddingTop="12dp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:paddingBottom="8dp"
            android:minHeight="48dp"
            android:layout_marginBottom="30dp"
            android:textColorHint="#999999"
            tools:hint="Entrez le poids" />

        <!-- Satisfaction Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SÃ©lectionnez votre niveau de satisfaction:"
            android:textSize="14sp"
            android:textColor="#666666"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="3"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="20dp">

            <Button
                android:id="@+id/happy_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:minHeight="50dp"
                android:maxHeight="100dp"
                android:text="ðŸ˜Š"
                android:textSize="24sp"
                android:background="@drawable/circular_button_background"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"
                android:padding="8dp"
                android:minWidth="0dp"
                android:gravity="center" />

            <Button
                android:id="@+id/neutral_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:minHeight="50dp"
                android:maxHeight="100dp"
                android:text="ðŸ˜"
                android:textSize="24sp"
                android:background="@drawable/circular_button_neutral"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"
                android:padding="8dp"
                android:minWidth="0dp"
                android:gravity="center" />

            <Button
                android:id="@+id/sad_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:minHeight="50dp"
                android:maxHeight="100dp"
                android:text="ðŸ˜ž"
                android:textSize="24sp"
                android:background="@drawable/circular_button_sad"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"
                android:padding="8dp"
                android:minWidth="0dp"
                android:gravity="center" />
        </LinearLayout>

        <!-- Submit Button -->
        <Button
            android:id="@+id/submit_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="VALIDER LA LIVRAISON"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:background="@drawable/submit_button_background"
            android:padding="15dp"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="30dp"
            android:enabled="false"
            android:alpha="0.5" />

        <!-- Cancellation Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Annulation"
            android:textSize="16sp"
            android:textColor="#333333"
            android:textStyle="bold"
            android:layout_marginBottom="12dp" />

        <EditText
            android:id="@+id/cancel_comment_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Raison de l'annulation"
            android:textSize="16sp"
            android:background="@drawable/input_field_selector"
            android:padding="12dp"
            android:paddingTop="12dp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:paddingBottom="8dp"
            android:minHeight="48dp"
            android:layout_marginBottom="15dp"
            android:textColorHint="#999999"
            tools:hint="Raison de l'annulation" />

        <Button
            android:id="@+id/cancel_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Annuler"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:background="#F44336"
            android:padding="15dp"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="20dp" />

    </LinearLayout>
</ScrollView>

