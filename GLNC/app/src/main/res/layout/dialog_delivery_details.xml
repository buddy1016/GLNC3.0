<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true"
    android:background="@android:color/white">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:paddingTop="20dp"
    android:paddingBottom="20dp"
    android:minHeight="200dp">

    <!-- Title -->
    <TextView
        android:id="@+id/dialog_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Delivery Details"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/purple_500"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="12dp" />

    <!-- Time -->
    <TextView
        android:id="@+id/detail_time_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time:"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="#757575"
        app:layout_constraintTop_toBottomOf="@id/dialog_title"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/detail_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="14:30"
        android:textSize="16sp"
        android:textColor="#424242"
        app:layout_constraintTop_toTopOf="@id/detail_time_label"
        app:layout_constraintStart_toEndOf="@id/detail_time_label"
        android:layout_marginStart="8dp"
        tools:text="14:30" />

    <!-- Client -->
    <TextView
        android:id="@+id/detail_client_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Client:"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="#757575"
        app:layout_constraintTop_toBottomOf="@id/detail_time_label"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="12dp" />

    <TextView
        android:id="@+id/detail_client"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="ABC Company"
        android:textSize="16sp"
        android:textColor="#424242"
        app:layout_constraintTop_toTopOf="@id/detail_client_label"
        app:layout_constraintStart_toEndOf="@id/detail_client_label"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="8dp"
        tools:text="ABC Company" />

    <!-- Address -->
    <TextView
        android:id="@+id/detail_address_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Address:"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="#757575"
        app:layout_constraintTop_toBottomOf="@id/detail_client_label"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="12dp" />

    <TextView
        android:id="@+id/detail_address"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="123 Main Street, City"
        android:textSize="16sp"
        android:textColor="#424242"
        app:layout_constraintTop_toTopOf="@id/detail_address_label"
        app:layout_constraintStart_toEndOf="@id/detail_address_label"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="8dp"
        tools:text="123 Main Street, City" />

    <!-- Contact -->
    <TextView
        android:id="@+id/detail_contact_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contact:"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="#757575"
        app:layout_constraintTop_toBottomOf="@id/detail_address_label"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="12dp" />

    <TextView
        android:id="@+id/detail_contact"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="John Doe - 123-456-7890"
        android:textSize="16sp"
        android:textColor="#424242"
        app:layout_constraintTop_toTopOf="@id/detail_contact_label"
        app:layout_constraintStart_toEndOf="@id/detail_contact_label"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="8dp"
        tools:text="John Doe - 123-456-7890" />


    <TextView
        android:id="@+id/detail_detail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Delivery instructions and additional information"
        android:textSize="14sp"
        android:textColor="#424242"
        app:layout_constraintTop_toBottomOf="@id/detail_contact"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="4dp"
        android:maxLines="10"
        android:ellipsize="end"
        tools:text="Delivery instructions and additional information" />

    <!-- Buttons -->
    <LinearLayout
        android:id="@+id/button_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        app:layout_constraintTop_toBottomOf="@id/detail_detail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:paddingTop="12dp">

<!--        <Button-->
<!--            android:id="@+id/return_button"-->
<!--            android:layout_width="0dp"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_weight="1"-->
<!--            android:text="Return"-->
<!--            android:textSize="14sp"-->
<!--            android:textColor="@android:color/white"-->
<!--            android:background="@drawable/return_button_background"-->
<!--            android:paddingStart="16dp"-->
<!--            android:paddingEnd="16dp"-->
<!--            android:paddingTop="12dp"-->
<!--            android:paddingBottom="12dp"-->
<!--            android:layout_marginEnd="8dp"-->
<!--            android:minWidth="0dp"-->
<!--            android:minHeight="48dp" />-->

        <Button
            android:id="@+id/sign_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Sign"
            android:textSize="14sp"
            android:textColor="@android:color/white"
            android:background="@drawable/sign_button_background"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:minWidth="0dp"
            android:minHeight="48dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>

